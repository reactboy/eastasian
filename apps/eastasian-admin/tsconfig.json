{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@admin/libs/*": ["libs/*"],
      "@admin/components/common": ["components/common/index.ts"],
      "@admin/components/layouts": ["components/layouts/index.ts"],
      "@admin/components/stacks": ["components/stacks/index.ts"],
      "@admin/api": ["api/index.ts"],
      "@admin/utils/*": ["utils/*"],
      "@admin/store": ["store/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": ["node_modules", "jest.config.ts"]
}
